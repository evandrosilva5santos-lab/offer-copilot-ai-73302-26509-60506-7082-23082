# Offer Copilot - Environment Configuration
# Copy this file to .env.local and fill in your values

# Environment (auto-detected by default)
# Options: lovable | dyad | v0 | local
VITE_APP_ENV=local

# API Configuration
VITE_API_URL=http://localhost:8080

# Supabase Configuration (optional - for Lovable)
VITE_SUPABASE_URL=
VITE_SUPABASE_PUBLISHABLE_KEY=

# AI Providers (optional - override default URLs)
VITE_GROQ_API_URL=https://api.groq.com/openai/v1/chat/completions
VITE_DEEPSEEK_API_URL=https://api.deepseek.com/v1/chat/completions
VITE_GEMINI_API_URL=https://generativelanguage.googleapis.com/v1beta

# Feature Flags
VITE_ENABLE_FILE_UPLOAD=true
VITE_ENABLE_ADMIN_PANEL=true
VITE_ENABLE_COPILOT=true
